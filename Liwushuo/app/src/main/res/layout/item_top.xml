<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/top_recommenditem_height"
    android:orientation="horizontal">
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/imageView1_topRecommendItem"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:src="@mipmap/ic_launcher"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:paddingLeft="@dimen/top_recommenditem_paddingLeft"
            android:orientation="vertical">
            <TextView
                android:id="@+id/textView1_topRecommendItem_ImageViewTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:textSize="20dp"
                android:text="测试数据"/>
            <TextView
                android:id="@+id/textView1_topRecommendItem_Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="测试数据"/>
            <TextView
                android:id="@+id/textView1_topRecommendItem_Price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ff0000"
                android:text="测试数据"/>

        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/imageView2_topRecommendItem"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:src="@mipmap/ic_launcher"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:paddingLeft="@dimen/top_recommenditem_paddingLeft"
            android:orientation="vertical">
            <TextView
                android:id="@+id/textView2_topRecommendItem_ImageViewTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:textSize="20dp"
                android:text="测试数据"/>
            <TextView
                android:id="@+id/textView2_topRecommendItem_Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="测试数据"/>
            <TextView
                android:id="@+id/textView2_topRecommendItem_Price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ff0000"
                android:text="测试数据"/>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>
